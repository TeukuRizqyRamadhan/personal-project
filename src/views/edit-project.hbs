<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Project - {{data.title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../assets/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <script src="https://kit.fontawesome.com/77b392a698.js" crossorigin="anonymous"></script>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary pt-3">
        <div class="container-fluid">
            <img src="../assets/img/brandred.png" alt="logo-dumbways" style="width: 50px;" class="ms-3 me-5">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link me-3" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/add-project">Add Project</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        {{#if isLogin}}
                        <li class="nav-item">
                            <a class="nav-link fw-bold active text-danger">Hello,
                                {{user}}</a>
                        </li>
                        <li class="nav-item ms-3 me-4">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                        {{else}}
                        <li class="nav-item">
                            <a class="nav-link me-3" aria-current="page" href="/login">Login</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link" aria-current="page" href="/register">Register</a>
                        </li>
                        {{/if}}
                        <li class="nav-item me-3">
                            <a class="btn btn-dumbways me-3" href="contact" role="button">Contact Me</a>
                        </li>
                    </ul>
                </form>
            </div>
        </div>
    </nav>

    <!-- Navbar -->

    <div class="container-lg">
        {{#if messages.danger}}
        <div class="alert alert-danger mt-5" role="alert">
            <div class="container">
                {{messages.danger}}
            </div>
        </div>
        {{/if}}
        <h1 class="text-center mt-5">EDIT PROJECT</h1>
        <form class="row g-3" method="post" action="/edit-project/{{data.id}}">
            <div class="col-12">
                <label for="input-project-title" class="form-label">Project Name</label>
                <input type="text" class="form-control" id="input-project-title" name="title" value="{{data.title}}">
            </div>
            <div class="col-md-6">
                <label for="input-project-start" class="form-label">Start Date</label>
                <input type="date" class="form-control" id="input-project-start" name="start_date"
                    value="{{data.start_date}}">
            </div>
            <div class=" col-md-6">
                <label for="input-project-end" class="form-label">End Date</label>
                <input type="date" class="form-control" id="input-project-end" name="end_date"
                    value="{{data.end_date}}">
            </div>
            <div class="">
                <label for=" input-project-desc" class="form-label">Description</label>
                <textarea class="form-control" id="input-project-desc" rows="3"
                    name="content">{{data.content}}</textarea>
            </div>
            <label for="tech">Technologies</label>
            <div class="col-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="node" value="node" {{#if data.node}} checked
                        {{/if}} />
                    <label class="form-check-label" for="gridCheck">
                        Node JS
                    </label>
                </div>
            </div>
            <div class="col-10">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="react" value="react" {{#if data.react}}
                        checked {{/if}} />
                    <label class="form-check-label" for="gridCheck">
                        React JS
                    </label>
                </div>
            </div>
            <div class="col-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="golang" value="golang" {{#if data.golang}}
                        checked {{/if}} />
                    <label class="form-check-label" for="gridCheck">
                        Golang
                    </label>
                </div>
            </div>
            <div class="col-6">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="js" value="js" {{#if data.js}} checked
                        {{/if}} />
                    <label class="form-check-label" for="gridCheck">
                        Javascript
                    </label>
                </div>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>

    <!-- Project -->
    <script src="assets/js/project.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>