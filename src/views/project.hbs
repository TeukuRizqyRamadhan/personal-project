<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create post blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../assets/css/style.css">
    <script src="https://kit.fontawesome.com/2a19752420.js" crossorigin="anonymous"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary pt-3">
        <div class="container-fluid">
            <img src="assets/img/brandred.png" alt="logo-dumbways" style="width: 50px;" class="ms-3 me-5">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link me-3 active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="add-project">Add Project</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        {{#if isLogin}}
                        <li class="nav-item">
                            <a class="nav-link fw-bold active text-danger">Hello,
                                {{user}}</a>
                        </li>
                        <li class="nav-item ms-3 me-4">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                        {{else}}
                        <li class="nav-item">
                            <a class="nav-link me-3" aria-current="page" href="/login">Login</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link" aria-current="page" href="/register">Register</a>
                        </li>
                        {{/if}}
                    </ul>
                    <a class="btn btn-dumbways me-3" href="contact" role="button">Contact Me</a>
                </form>
            </div>
        </div>
    </nav>

    <div class="container d-flex flex-column mt-5">
        {{!-- <div class="w-100 d-flex justify-content-end mb-3">
            <a href="add-blog" class="btn btn-primary">Add New Blog</a>
        </div> --}}
        <div id="contents">
            {{#each data}}
            <div class="card mb-3 w-100">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{this.image}}" class="img-fluid rounded-start" alt="..." />
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/project-detail/{{this.id}}" target="_blank">{{this.title}}</a>
                            </h5>
                            <p>
                                Start Date: {{this.start_date}} | End Date: {{this.end_date}}
                            </p>
                            <p class="card-text">{{this.content}}</p>
                            {{#if this.node}}
                            <i class="mt-5 me-2 "><i class="fa-brands fa-node fa-2xl"></i></i>
                            {{/if}}
                            {{#if this.react}}
                            <i class="mt-5 me-2"><i class="fa-brands fa-react fa-2xl"></i></i>
                            {{/if}}
                            {{#if this.golang}}
                            <i class="mt-5 me-2"><i class="fa-brands fa-golang fa-2xl"></i></i>
                            {{/if}}
                            {{#if this.js}}
                            <i class="mt-5 me-2 "><i class="fa-brands fa-js fa-2xl"></i></i>
                            {{/if}}
                            <p class="mt-3 card-text"><small class="text-body-secondary">Durasi :
                                    {{this.diff_date}}
                                </small></p>
                        </div>
                    </div>
                    <div class="col-md-2 d-flex mt-1" style="height: fit-content;">
                        <a class="btn btn-secondary" href="/edit-project/{{this.id}}">Edit post</a>
                        <a class="btn btn-primary" href="/delete-project/{{this.id}}">Delete post</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>