<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Me</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../assets/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <script src="https://kit.fontawesome.com/77b392a698.js" crossorigin="anonymous"></script>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary pt-3">
        <div class="container-fluid">
            <img src="assets/img/brandred.png" alt="logo-dumbways" style="width: 50px;" class="ms-3 me-5">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link me-3" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="add-project">Add Project</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        {{#if isLogin}}
                        <li class="nav-item">
                            <a class="nav-link fw-bold active text-danger">Hello,
                                {{user}}</a>
                        </li>
                        <li class="nav-item ms-3 me-4">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                        {{else}}
                        <li class="nav-item">
                            <a class="nav-link me-3" aria-current="page" href="/login">Login</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link" aria-current="page" href="/register">Register</a>
                        </li>
                        {{/if}}
                        <li class="nav-item me-3">
                            <a class="btn btn-dumbways me-3" href="contact" role="button">Contact Me</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Navbar -->

    <div class="container-lg">
        <h1 class="text-center mt-5">GET IN TOUCH</h1>
        <form class="row g-3">
            <div class="col-12">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="name">
            </div>
            <div class="col-md-12">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" id="email">
            </div>
            <div class="col-md-12">
                <label class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="phone">
            </div>
            <div class="col-md-12">
                <label class="mb-2">Subject</label>
                <select id="subject" class="form-select">
                    <option hidden></option>
                    <option>Frontend</option>
                    <option>Backend</option>
                    <option>Fullstack</option>
                </select>
            </div>
            <div class="">
                <labelclass="form-label">Your Message</label>
                    <textarea class="form-control" id="message" rows="4"></textarea>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary" onclick="getData()">Submit</button>
            </div>
        </form>
    </div>

    <!-- Project -->
    <script src="../assets/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>